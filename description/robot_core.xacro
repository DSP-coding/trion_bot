<?xml version="1.0"?>
<robot name="robot_core" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Include inertial macros -->
  <!-- Ensure that inertial_macros.xacro is present and correctly defined -->
  <xacro:include filename="inertial_macros.xacro"/>

  <!-- Define colors -->
  <material name="yellow">
    <color rgba="1 1 0 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <!-- Define the base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.1815" length="0.01"/>
      </geometry>
      <material name="yellow"/>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1815" length="0.01"/>
      </geometry>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  <gazebo reference="base_link">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <!-- Define the chassis link -->
  <link name="chassis_link">
    <visual>
      <geometry>
        <cylinder radius="0.1815" length="0.25"/>
      </geometry>
      <material name="yellow"/>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1815" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.015"/>
    </inertial>
  </link>
  <gazebo reference="chassis_link">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <!-- Joint between base_link and chassis_link -->
  <joint name="base_to_chassis" type="fixed">
    <parent link="base_link"/>
    <child link="chassis_link"/>
    <origin xyz="0 0 0.005" rpy="0 0 0"/>
  </joint>

  <!-- Left wheel -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.198 0" rpy="-${pi/2}  0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <damping>0.01</damping>
  </gazebo>

  <!-- Right wheel -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.198 0" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <damping>0.01</damping>
  </gazebo>

  <!-- Caster wheel front -->
  <joint name="caster_wheel_joint_front" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel_front"/>
    <origin xyz="0.12 0 0"/>
  </joint>

  <link name="caster_wheel_front">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <gazebo reference="caster_wheel_front">
    <material>Gazebo/Black</material>
    <mu1>0.01</mu1>
    <mu2>0.01</mu2>
    <damping>0.01</damping>
  </gazebo>

  <!-- Caster wheel back -->
  <joint name="caster_wheel_joint_back" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel_back"/>
    <origin xyz="-0.12 0 0"/>
  </joint>

  <link name="caster_wheel_back">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <gazebo reference="caster_wheel_back">
    <material>Gazebo/Black</material>
    <mu1>0.01</mu1>
    <mu2>0.01</mu2>
    <damping>0.01</damping>
  </gazebo>

</robot>
